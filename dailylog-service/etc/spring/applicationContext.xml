<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context" xmlns:mvc="http://www.springframework.org/schema/mvc"
  xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  <!-- 加载配置 -->
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <list>
        <value>classpath:db.properties</value>
      </list>
    </property>
  </bean>
  <!-- 数据源 -->
  <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
    <property name="driverClass" value="${db.driverClassName}"></property>
    <property name="jdbcUrl" value="${db.url}"></property>
    <property name="user" value="${db.username}"></property>
    <property name="password" value="${db.password}"></property>
    <property name="maxPoolSize" value="${db.maxPoolSize}"></property>
    <property name="minPoolSize" value="${db.minPoolSize}"></property>
    <property name="maxIdleTime" value="${db.maxIdleTime}"></property>
  </bean>
  <!-- spring自动组件扫描，载入注解的内容 -->
  <context:annotation-config /><!--这个非常重要，没有的时候controller不能注册 -->
  <context:component-scan base-package="org.lxp.dailylog.service.impl" />
  <context:component-scan base-package="org.lxp.dailylog.service.dao" />
<!--   <context:component-scan base-package="org.lxp.dailylog.model" /> -->
</beans>
