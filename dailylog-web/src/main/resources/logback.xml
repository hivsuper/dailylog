<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="COMMON_PATTERN"
    value="%d{ISO8601,UTC} %-5p class=%logger{36} thread=%thread %X{request_id:-}event_description=&quot;%m&quot;%n" />
  <property name="APILOG_PATTERN" value="%d{ISO8601,UTC} %-5p class=%logger{36} thread=%thread - %msg%n" />
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>${COMMON_PATTERN}</pattern>
    </encoder>
  </appender>
  <appender name="apiLogAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>${APILOG_PATTERN}</pattern>
    </encoder>
  </appender>
  <logger name="org.springframework" level="info" additivity="false">
    <appender-ref ref="CONSOLE" />
  </logger>
  <logger name="com.zaxxer.hikari" level="info" additivity="false">
    <appender-ref ref="CONSOLE" />
  </logger>

  <logger name="com.lxp.dailylog" level="info" additivity="false">
    <appender-ref ref="CONSOLE" />
  </logger>

  <logger name="apiLog" level="info" additivity="false">
    <appender-ref ref="apiLogAppender" />
  </logger>

  <root level="debug">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>